<Window x:Class="ESC_Next_Level1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="250" Width="425" Loaded="Window_Loaded">
    <StackPanel Background="LightSteelBlue" Margin="15">
        <WrapPanel>
            <TextBlock Text=" Controller's Power:  "/>
            <TextBlock Text="{Binding power}"/>
            
        </WrapPanel>
        <WrapPanel>
            <TextBlock Text=" Controller's Name:  "/>
            <TextBlock Text="{Binding name}"/>
            </WrapPanel>

        <WrapPanel>
            <TextBlock Text=" Controller's Inputs:  "/>
            <TextBlock Text="{Binding inputs}"/>
        </WrapPanel>
        <WrapPanel>
            <TextBlock Text=" Controller's Outputs:  "/>
            <TextBlock Text="{Binding outputs}"/>
        </WrapPanel>

        <WrapPanel Margin="0,10,0,0">
            <TextBlock Text="  Reverse Controller's Name:      " />
            <TextBox Name ="txtNameReverse" Width="150" />
         
        </WrapPanel>
        
        <WrapPanel Margin="120,10,0,0">

            <Button Name="btnReverseName" Width="150" Click="btnReverseName_Click">Reverse</Button>
        </WrapPanel>

    </StackPanel>





</Window>
